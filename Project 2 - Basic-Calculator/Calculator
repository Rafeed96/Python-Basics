# Basic Calculator functions
# Add, Sub, Mul, Div, Remainder, Percentage
# Print options for the user
# Show results
# While Loop menu system to continueously run the calculator until user exits


def showMenu():
    print("Please select and option for calculation")
    print("Press A for Addition")
    print("Press b for Subtraction")
    print("Press C for Multiplication")
    print("Press D for Division")
    print("Press E for Remainder")
    print("Press F for Percentage")


def add():
    print("Please enter the 1st number for Addition")
    a = float(input())
    print("Please enter the 2nd number for Addition")
    b = float(input())
    result = a+b
    print("The result is : " + str(result))


def sub():
    print("Please enter the 1st number for Subtraction")
    a = float(input())
    print("Please enter the 2nd number for Subtraction")
    b = float(input())
    result = a-b
    print("The result is : " + str(result))


def mul():
    print("Please enter the 1st number for Multiplication")
    a = float(input())
    print("Please enter the 2nd number for Multiplication")
    b = float(input())
    result = a*b
    print("The result is : " + str(result))


def div():
    print("Please enter the 1st number for Division")
    a = float(input())
    print("Please enter the 2nd number for Division")
    b = float(input())
    result = a/b
    print("The result is : " + str(result))
